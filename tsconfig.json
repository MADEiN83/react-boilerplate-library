{
  "compilerOptions": {
    "outDir": "./dist/out",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"]
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules", "dist"]
}
